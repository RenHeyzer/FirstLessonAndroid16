<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearanceOverlay.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceOverlay.Small.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearanceOverlay.Small.Primary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialButton.CustomButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="TextAppearanceOverlay.Button.Medium" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>